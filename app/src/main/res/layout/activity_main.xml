<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="NumberProgressBar" />

    <com.wowo.kjt.library.NumberProgressBar
        android:id="@+id/progressbar1"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:padding="5dp"
        android:progress="30" />

    <com.wowo.kjt.library.NumberProgressBar
        android:id="@+id/progressbar2"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:padding="5dp"
        android:progress="60"
        app:progressbar_reach_color="#000000"
        app:progressbar_reach_height="4dp"
        app:progressbar_text_color="#000000"
        app:progressbar_unreach_color="#ffffff"
        app:progressbar_unreach_height="3dp" />

    <com.wowo.kjt.library.NumberProgressBar
        android:id="@+id/progressbar3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:padding="5dp"
        android:progress="70"
        app:progressbar_reach_color="#4cdcdc"
        app:progressbar_reach_height="5dp"
        app:progressbar_text_color="#4cdcdc"
        app:progressbar_unreach_color="#aadddd"
        app:progressbar_unreach_height="3dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="RoundNumberProgressBar" />


    <com.wowo.kjt.library.RoundNumberProgressBar
        android:id="@+id/progressbar4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:progress="50"
        app:progressbar_radius="15dp"
        app:progressbar_reach_color="#f7a63c"
        app:progressbar_text_color="#f7a63c"
        app:progressbar_unreach_color="#f7c06e" />

    <com.wowo.kjt.library.RoundNumberProgressBar
        android:id="@+id/progressbar5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:progress="50"
        app:progressbar_radius="60dp"
        app:progressbar_reach_color="#f456c5"
        app:progressbar_text_color="#f456c5"
        app:progressbar_text_size="18sp"
        app:progressbar_unreach_color="#f194e1" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="IOSProgressBar" />

    <com.wowo.kjt.library.IOSProgressBar
        android:id="@+id/progressbar6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:padding="5dp"
        android:progress="60"
        app:progressbar_radius="15dp"
        app:progressbar_reach_color="#218df2"
        app:progressbar_unreach_color="#218df2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="BeautyProgressBar" />

    <com.wowo.kjt.library.BeautyProgressBar
        android:id="@+id/progressbar7"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:progress="30" />

</LinearLayout>
